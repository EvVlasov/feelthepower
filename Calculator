public class calc {

    private static java.util.Scanner input;

    public static void main(String[] args) {
        input = new java.util.Scanner(System.in);
        System.out.println("Please input first number");
        double i = input.nextDouble();
        System.out.println("Your input " +i+" as first number");
        System.out.println("Please input second number");
        double w = input.nextDouble();
        System.out.println("Your input " +w+" as second number");
        System.out.println("Sum is " + (i+w));
        System.out.println("Difference is " + (i-w));
        System.out.println("Multiplication is " + (i*w));
        System.out.println("Division is " + (i/w));
        System.out.println("Mod is " + (i%w));


    }

}
